@page
@model Recipe_Sharing.Pages.Groups.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <h4>Are you sure you want to delete this group?</h4>
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Group.Name</dd>
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Group.Description</dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Group.Id" />
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>